// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "watch",
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "shell",
			"label": "rungo",
			"options": {
				"cwd": "${fileDirname}"
			},
			"command": "go run ${file}"
		},
		{
			"label": "rustkernel-mock",
			"type": "shell",
			"command": "cargo install hackdown",
			"presentation": {
				"reveal": "always",
				"panel": "shared",
				"showReuseMessage": false,
				"clear": false,
				"close": true,
				"echo": true,
				"focus": true,
				"group": "testGroup",
				"revealProblems": "never"
			},
		}
	]
}