{
  "name": "hackdown",
  "publisher": "hackdown",
  "displayName": "hackdown",
  "description": "Rust interactive notebook that executes code and saves results to markdown",
  "version": "0.0.9",
  "preview": true,
  "enableProposedApi": false,
  "icon": "images/icon.png",
  "keywords": [
    "rust",
    "rustlang",
    "notebook",
    "hackdown",
    "notebooks"
  ],
  "engines": {
    "vscode": "^1.58.0"
  },
  "repository": {
    "url": "https://github.com/hackdown/hackdown"
  },
  "categories": [
    "Notebooks"
  ],
  "activationEvents": [
    "onNotebook:hackdown",
    "onLanguage:hackdown"
  ],
  "main": "./dist/extension.js",
  "capabilities": {
    "virtualWorkspaces": true,
    "untrustedWorkspaces": {
      "supported": true
    }
  },
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Hackdown Kernel configuration",
      "properties": {
        "hackdown.rust.path": {
          "description": "Path to `rust` executable",
          "type": "string",
          "scope": "window"
        },
        "hackdown.kernel.path": {
          "description": "Path to kernel executable",
          "type": "string",
          "scope": "window"
        },
        "hackdown.kernel.module": {
          "description": "Kernel module",
          "type": "string",
          "scope": "window"
        },
        "hackdown.kernel.version": {
          "description": "Kernel version",
          "type": "string",
          "scope": "window"
        },
        "hackdown.kernel.tags": {
          "description": "Tags to use when building the kernel",
          "type": "string",
          "scope": "window"
        }
      }
    },
    "commands": [
      {
        "command": "hackdown.kernel.restart",
        "title": "Hackdown: Restart Kernel",
        "description": "Restart the running instance of the kernel"
      }
    ],
    "notebooks": [
      {
        "type": "hackdown",
        "displayName": "Hackdown",
        "priority": "option",
        "selector": [
          {
            "filenamePattern": "*.{md,markdown}"
          }
        ]
      },
      {
        "type": "hackdown",
        "displayName": "Hackdown",
        "priority": "default",
        "selector": [
          {
            "filenamePattern": "*.{rn}"
          }
        ]
      }
    ],
    "notebookRenderer": [
      {
        "id": "hackdown",
        "displayName": "Hackdown",
        "entrypoint": "./dist/extension.js",
        "mimeTypes": [
          "x-application/hackdown"
        ]
      }
    ],
    "languages": [
      {
        "id": "hackdown",
        "aliases": [
          "Hackdown"
        ],
        "filenamePatterns": [
          "*.hackdown"
        ]
      }
    ],
    "grammars": [
      {
        "language": "hackdown",
        "scopeName": "source.hackdown",
        "path": "./syntaxes/hackdown.tmGrammar.json",
        "embeddedLanguages": {
          "meta.embedded.block.rust": "rust"
        }
      }
    ]
  },
  "scripts": {
    "compile:extension": "yarn run bundle --sourcemap",
    "watch:extension": "yarn run bundle --sourcemap",
    "bundle": "esbuild ./src/extension/main.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node",
    "watch": "yarn run watch:extension",
    "compile": "yarn run compile:extension && yarn run bundle --minify",
    "vscode:prepublish": "yarn run compile",
    "lint": "eslint src --ext ts",
    "deploy": "npx vsce publish --noVerify",
    "pretest": "yarn run compile && yarn run lint",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/glob": "^7.1.4",
    "@types/google-protobuf": "^3.15.5",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.6.1",
    "@types/node-fetch": "^2.5.12",
    "@typescript-eslint/eslint-plugin": "^4.29.2",
    "@typescript-eslint/parser": "^4.29.2",
    "concurrently": "^6.2.1",
    "esbuild": "^0.12.20",
    "eslint": "^7.32.0",
    "glob": "^7.1.7",
    "json": "^11.0.0",
    "mocha": "^9.0.3",
    "ovsx": "^0.2.0",
    "typescript": "^4.3.5",
    "vsce": "^1.100.2",
    "vscode-test": "^1.6.1"
  }
}